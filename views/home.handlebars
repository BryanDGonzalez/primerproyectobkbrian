<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="mb-0">
                <i class="fas fa-home text-primary me-2"></i>
                Bienvenido a la Tienda de Mangas
            </h1>
            <a href="/realtimeproducts" class="btn btn-primary">
                <i class="fas fa-bolt me-1"></i>
                Ver Productos en Tiempo Real
            </a>
        </div>
        <p class="lead text-muted">Explora nuestra colección de mangas disponibles</p>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">
                    <i class="fas fa-list me-2"></i>
                    Productos Disponibles
                </h3>
            </div>
            <div class="card-body">
                {{#if products.length}}
                    <div class="row">
                        {{#each products}}
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card h-100 product-card">
                                    <div class="card-body">
                                        <h5 class="card-title text-primary">{{title}}</h5>
                                        <p class="card-text text-muted">{{description}}</p>
                                        <div class="row">
                                            <div class="col-6">
                                                <small class="text-muted">Código:</small>
                                                <p class="mb-1"><strong>{{code}}</strong></p>
                                            </div>
                                            <div class="col-6">
                                                <small class="text-muted">Categoría:</small>
                                                <p class="mb-1"><strong>{{category}}</strong></p>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-6">
                                                <small class="text-muted">Precio:</small>
                                                <p class="mb-1"><strong class="text-success">${{price}}</strong></p>
                                            </div>
                                            <div class="col-6">
                                                <small class="text-muted">Stock:</small>
                                                <p class="mb-1">
                                                    <span class="badge {{#if (gt stock 10)}}bg-success{{else if (gt stock 5)}}bg-warning{{else}}bg-danger{{/if}}">
                                                        {{stock}} unidades
                                                    </span>
                                                </p>
                                            </div>
                                        </div>
                                        <div class="mt-2">
                                            <small class="text-muted">Estado:</small>
                                            <span class="badge {{#if status}}bg-success{{else}}bg-secondary{{/if}}">
                                                {{#if status}}Disponible{{else}}No disponible{{/if}}
                                            </span>
                                        </div>
                                        {{#if thumbnails.length}}
                                            <div class="mt-3">
                                                <small class="text-muted">Imágenes:</small>
                                                <div class="d-flex gap-1 mt-1">
                                                    {{#each thumbnails}}
                                                        <img src="{{this}}" alt="Thumbnail" class="img-thumbnail" style="width: 50px; height: 50px; object-fit: cover;">
                                                    {{/each}}
                                                </div>
                                            </div>
                                        {{/if}}
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                {{else}}
                    <div class="text-center py-5">
                        <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">No hay productos disponibles</h4>
                        <p class="text-muted">Los productos aparecerán aquí cuando sean agregados.</p>
                    </div>
                {{/if}}
            </div>
        </div>
    </div>
</div>
